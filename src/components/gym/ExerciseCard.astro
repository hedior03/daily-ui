---
interface Props {
	name: string;
	sets?: number | string;
	reps?: string;
	rest?: string;
	rpe?: number | string;
	duration?: string;
	id?: string;
}

const { name, sets, reps, rest, rpe, duration, id } = Astro.props;
---

<div
	class="relative p-4 rounded-lg bg-background border border-(--color-border) hover:border-primary transition-colors group"
>
	<div class="flex items-start justify-between mb-3">
		<h4 class="font-semibold text-foreground">{name}</h4>
		{
			id && (
				<a
					href={`/exercises/${id}`}
					class="text-muted-foreground hover:text-primary transition-colors p-1 -mr-2 -mt-2"
				>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="18"
						height="18"
						viewBox="0 0 24 24"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
						stroke-linecap="round"
						stroke-linejoin="round"
						class="lucide lucide-arrow-up-right"
					>
						<>
							<path d="M7 7h10v10" />
							<path d="M7 17 17 7" />
						</>
					</svg>
				</a>
			)
		}
	</div>

	<div class="flex flex-wrap gap-y-2 text-sm text-muted-foreground">
		{
			sets && (
				<div class="flex items-center">
					<span class="font-medium text-foreground">{sets}</span>
					<span class="ml-1">sets</span>
					<span class="mx-2 opacity-30">|</span>
				</div>
			)
		}

		{
			reps && (
				<div class="flex items-center">
					<span class="font-medium text-foreground">{reps}</span>
					<span class="ml-1">reps</span>
					<span class="mx-2 opacity-30">|</span>
				</div>
			)
		}

		{
			duration && (
				<div class="flex items-center">
					<span class="font-medium text-foreground">{duration}</span>
					<span class="mx-2 opacity-30">|</span>
				</div>
			)
		}

		{
			rpe && (
				<div class="flex items-center">
					<span class="opacity-70 mr-1">RPE</span>
					<span class="font-medium text-foreground">{rpe}</span>
					<span class="mx-2 opacity-30">|</span>
				</div>
			)
		}

		{
			rest && (
				<div class="flex items-center">
					<span class="opacity-70 mr-1">Rest</span>
					<span class="font-medium text-foreground">{rest}</span>
				</div>
			)
		}
	</div>
</div>
