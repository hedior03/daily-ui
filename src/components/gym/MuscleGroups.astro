---
interface Props {
	groups: string[];
}

const { groups } = Astro.props;
---

<div class="flex flex-wrap gap-2 mb-6">
	{
		groups.map((group: string | undefined) => (
			<span class="px-2.5 py-0.5 rounded-full text-xs font-semibold bg-primary/10 text-primary border border-primary/20 shadow-sm transition-all hover:bg-primary hover:text-primary-foreground">
				{group}
			</span>
		))
	}
</div>
