---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const tenants = await getCollection("tenants", ({ data }) => data.active);
const specs = await getCollection("specs", ({ id }) => id.endsWith("/latest"));

// Cross-reference tenants with their latest specs
const tenantCards = tenants.map((tenant) => {
  const [category, name] = tenant.id.split("/");
  const spec = specs.find((s) => s.id === `${category}/${name}/latest`);
  return {
    id: tenant.id,
    name: tenant.data.name,
    category,
    hasSpec: !!spec,
    schedule: tenant.data.schedule,
  };
});
---

<Layout title="Daily UI â€” Dashboard">
  <div class="space-y-8">
    <div>
      <h1 class="text-3xl font-bold tracking-tight">Dashboard</h1>
      <p class="mt-2 text-muted-foreground">
        Your daily-generated life tracking interfaces.
      </p>
    </div>

    {tenantCards.length === 0 && (
      <div class="rounded-lg border border-border bg-card p-8 text-center">
        <p class="text-muted-foreground">
          No active tenants found. Add tenant configs to <code>tenants/</code> and run the generator.
        </p>
      </div>
    )}

    <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      {tenantCards.map((tenant) => (
        <a
          href={`/daily-ui/${tenant.category}/${tenant.id.split("/")[1]}/`}
          class:list={[
            "group rounded-lg border border-border bg-card p-6 transition-colors hover:border-ring",
            !tenant.hasSpec && "opacity-60",
          ]}
        >
          <div class="flex items-start justify-between">
            <div>
              <h2 class="text-lg font-semibold group-hover:text-primary">
                {tenant.name}
              </h2>
              <p class="mt-1 text-sm text-muted-foreground capitalize">
                {tenant.category}
              </p>
            </div>
            <span
              class:list={[
                "inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium",
                tenant.hasSpec
                  ? "bg-green-500/10 text-green-400"
                  : "bg-yellow-500/10 text-yellow-400",
              ]}
            >
              {tenant.hasSpec ? "Ready" : "Pending"}
            </span>
          </div>
          <div class="mt-4 flex flex-wrap gap-1">
            {Object.entries(tenant.schedule).map(([day, active]) => (
              <span
                class:list={[
                  "rounded px-1.5 py-0.5 text-xs",
                  active
                    ? "bg-secondary text-secondary-foreground"
                    : "text-muted-foreground/40",
                ]}
              >
                {day.slice(0, 3)}
              </span>
            ))}
          </div>
        </a>
      ))}
    </div>
  </div>
</Layout>
