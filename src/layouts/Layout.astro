---
interface Props {
  title?: string;
}

const { title = "Daily UI" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/daily-ui/favicon.svg" />
  </head>
  <body class="min-h-screen bg-background text-foreground">
    <header class="border-b border-border px-6 py-4">
      <nav class="mx-auto flex max-w-5xl items-center gap-6">
        <a href="/daily-ui/" class="text-lg font-semibold tracking-tight">
          Daily UI
        </a>
        <span class="text-sm text-muted-foreground">Life Tracking System</span>
      </nav>
    </header>
    <main class="mx-auto max-w-5xl px-6 py-8">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>
